<ul class="row products">
  {{range .Products}}
    <li class="column column-4">
      <a href="{{.DefaultPath}}" class="products__img"><img src="{{.MainImageUrl}}" alt="" /></a>
      <a class="products__title" href="{{.DefaultPath}}">{{.Name}}</a>
      <p class="products__price" href="{{.DefaultPath}}"><span class="item_price">${{.Price}}</span></p>
    </li>
  {{end}}
</ul>
