{{template "header" .}}

{{with .ColorVariation }}
  <div class="container products__details">

    <div class="row">
      <div class="column column-8 products__gallery">
        {{range .Images}}
          <img src="{{.Image.URL}}" data-imagezoom="true" class="img-responsive" alt="" />
        {{end}}
      </div>
      <div class="column column-4 products__meta">
        <h1>{{.Product.Name}}</h1>
        <p class="products__meta--price">${{.Product.Price}}</p>
        <ul>
          <li>
            <strong>COLOR</strong>
            <span>{{.Color.Name}}</span>
            <div>
              <span class="selected" style="background: #F6841C"></span>
              <span class="" style="background: #25A5DF"></span>
              <span class="" style="background: #80DA7A"></span>
              <span class="" style="background: #FFD322"></span>
              <span class="" style="background: #77969E"></span>
              <span class="" style="background: #2F2F2F"></span>
            </div>
          </li>

          <li>
            <strong>SIZE</strong>
            <select class="" name="domains">
              {{range .SizeVariations}}
                <option value="{{.Size.ID}}">{{.Size.Name}}</option>
              {{end}}
            </select>
            <a href="#">Size Guide</a>
          </li>

          <li>
            <strong>QTY</strong>
            <div class="products__meta--qty">
              <a href="#">-</a>
              <a href="#">+</a>
              <input type="text" />
            </div>
          </li>
          <li>
            <button type="submit">+ ADD TO CART</button>
          </li>
        </ul>
        <div class="products__details--share">
          <a href="#">TO WISHLIST</a>
          <div>
            <span>SHARE:</span>
            <a href="#"><img src="/images/facebook-grey.png" /></a>
            <a href="#"><img src="/images/twitter-grey.png" /></a>
          </div>
        </div>
      </div>
    </div>

    <div class="row products__info">

      <div class="column column-4">
        <h6>DESCRIPTION:</h6>
        <p>{{.Product.Description}}</p>
      </div>

      <div class="column column-4">
        <h6>SPECS:</h6>
        <div>
          <label>Made in:</label>
          <p>{{.Product.MadeCountry}}</p>
        </div>
        <div>
          <label>Materials:</label>
          <p>Rubber soles, fabric uppers, plastic & metal zipper</p>
        </div>
      </div>

      <div class="column column-4">
        <div>
          <label>Framistan:</label>
          <p>Me non paenitet nullum festiviorem excogitasse ad hoc. Etiam habebis sem dicantur magna mollis euismod.</p>
        </div>
      </div>
    </div>


    {{end}}
</div>

{{template "footer" .}}
