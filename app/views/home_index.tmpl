{{template "header" .}}

<div class="banner">
  <div class="container">
    <div class="row">
        <div class="column column-12">
          <img src="/images/logo-big.png" class="banner__logo" />
          <h1>Software that fits like a glove.</h1>
          <div><a href="#" class="button button__primary">START SHOPPING</a></div>
        </div>
      </div>
    </div>
</div>

<div class="container">
    <div class="row">
      <div class="column column-12 section__title">
        <h3>FEATURED PRODUCTS</h3>
        <p>Your daily dose of QOR, brought to you by <a href="https://theplant.jp/">The Plant</a></p>
      </div>
      <ul class="row products">
      {{range .Products}}
        <li class="column column-4">
          <a href="{{.DefaultPath}}" class="products__img"><img src="{{.MainImageUrl}}" alt="" /></a>
          <a class="products__title" href="{{.DefaultPath}}">{{.Name}}</a>
          <p class="products__price" href="{{.DefaultPath}}"><span class="item_price">${{.Price}}</span></p>
        </li>
      {{end}}
      </ul>
    </div>

    <div class="online-strip">
      <div class="col-md-4 follow-us">
        <h3>follow us : <a class="twitter" href="https://twitter.com/QORSDK"></a><a class="facebook" href="https://twitter.com/QORSDK"></a></h3>
      </div>
      <div class="col-md-4 shipping-grid">
        <div class="shipping">
          <img src="images/shipping.png" alt="" />
        </div>
        <div class="shipping-text">
          <h3>Free Shipping</h3>
          <p>on orders over $ 199</p>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="col-md-4 online-order">
        <p>Order online</p>
        <h3>Tel:999 9999 9999</h3>
      </div>
      <div class="clearfix"></div>
    </div>
</div>

{{template "footer" .}}
