<main class="container cart-show">
  <div class="grid">
    <div class="grid__col is-8">

      <h1>Cart</h1>
      <p class="tips">You Have 2 Items In Your Cart</p>

      <table class="shop_table cart woocommerce-cart-form__contents" cellspacing="0">
        <thead>
          <tr>
            <th class="product-details" colspan="2">Product</th>
            <th class="product-quantity">Quantity</th>
            <th class="product-subtotal">Total</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td width="130px"><a href="#"><img src="/system/product_images/1/file.main.jpg" alt=""></a></td>
            <td>
                <p>Multicolor Shirt</p>
                <p>Color: </p>
                <p>Size: </p>
                <p>Price: $199.00</p>
            </td>
            <td>
              <div class="quantity">
                <button type="button" class="minus">-</button>
                <input type="number" class="input-text qty text" step="1" min="0" max="" name="" value="1" title="Qty" size="4" pattern="[0-9]*" inputmode="numeric">
                <button type="button" class="plus">+</button>
              </div>
            </td>
            <td>
              $199.00
            </td>
          </tr>
          <tr>
            <td colspan="4">
              <button class="button button__primary">Update cart</button>
              <button class="button button__primary">Checkout</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="grid__col is-4 cart-summary">
      <h2>SUMMARY</h2>
        <ul>
          <li>
            <label>Subtotal:</label> <span>$113.98</span>
          </li>
          <li>
            <label>Subtotal:</label> <span>$113.98</span>
          </li>
          <li>
            <label>Subtotal:</label> <span>$113.98</span>
          </li>
        </ul>
    </div>


  </div>

